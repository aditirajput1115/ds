#include <stdio.h>
#include <stdlib.h>

#define V 4  // Number of locations (A, B, C, D)

// ----- DFS using Adjacency Matrix -----
int visited[V];
int graph[V][V] = {
    {0,1,1,0},  // A connected to B, C
    {1,0,0,1},  // B connected to A, D
    {1,0,0,1},  // C connected to A, D
    {0,1,1,0}   // D connected to B, C
};

void DFS(int node) {
    visited[node] = 1;
    printf("%c ", node + 'A');
    for (int i = 0; i < V; i++)
        if (graph[node][i] && !visited[i])
            DFS(i);
}

// ----- BFS using Adjacency List -----
struct Node {
    int data;
    struct Node* next;
};
struct Node* adj[V];

void addEdge(int u, int v) {
    struct Node* new = malloc(sizeof(struct Node));
    new->data = v;
    new->next = adj[u];
    adj[u] = new;
}

void BFS(int start) {
    int queue[20], front = 0, rear = 0, visitedB[V] = {0};
    queue[rear++] = start;
    visitedB[start] = 1;

    while (front < rear) {
        int node = queue[front++];
        printf("%c ", node + 'A');
        struct Node* temp = adj[node];
        while (temp) {
            if (!visitedB[temp->data]) {
                queue[rear++] = temp->data;
                visitedB[temp->data] = 1;
            }
            temp = temp->next;
        }
    }
}

int main() {
    // Build adjacency list for BFS
    addEdge(0,1); addEdge(0,2);
    addEdge(1,0); addEdge(1,3);
    addEdge(2,0); addEdge(2,3);
    addEdge(3,1); addEdge(3,2);

    printf("DFS (Adjacency Matrix) starting from A: ");
    DFS(0);

    printf("\nBFS (Adjacency List) starting from A: ");
    BFS(0);
    return 0;
}
